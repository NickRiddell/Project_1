<main class="container">
  <div class="headline"><h1>Venues</h1></div>
    <%= form_tag(venues_path, :method => "get", class: "navbar_form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Venues" %>
      <button class="btn" type="submit"><i class="icon-search"></i></button>
    </div>
  <% end %>
<br><br>
<section class="row">
  <% @venues.each do |venue| %>
    <div class="grid grid-6">
      <%= link_to( image_tag(venue.image, alt:"No image", class: "show-img"), venue_path(venue)) %>
      <div class="show-title">
        <h2><%= link_to("#{venue.name}", venue_path(venue)) %></h2>
      </div>
    </div>
  <% end %>
  </section>
</main>
<br><br>
<% if can? :create, Venue %> 
<div>
<%=button_to('New Venue', new_venue_path, method: :get)%>
</div>
<% end %>