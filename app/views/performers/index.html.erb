<%= form_tag(performers_path, :method => "get", class: "navbar_form", id: "search-form") do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Performers" %>
    <button class="btn" type="submit"><i class="icon-search"></i></button>
  </div>
<% end %>
<% @performers.each do |performer| %>
<%= link_to("#{performer.name}", performer_path(performer)) %>
<% end %>
<br><br>
<% if can? :create, Performer %> 
<div>
<%=button_to('New Performer', new_performer_path, method: :get)%>
</div>
<% end %>