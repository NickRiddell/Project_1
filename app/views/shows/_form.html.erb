<%= form_for @show do |f| %>

<div>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</div>
<div>
  <%= f.label :image %><br>
  <%= f.text_field :image%>
</div>
<div>
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</div>
<div>
<%= f.label :performer_id %><br>
<%= f.select :performer_id, Performer.all.map {|v| [v.name, v.id] } %>
</div>
<div>
  <%= f.label :venue_id %><br>
  <%= f.select :venue_id, Venue.all.map {|v| [v.name, v.id] } %>
</div>
<div>
<%= f.label :start_time %>
<%= f.datetime_select :start_time %>
</div>
<div>
<%= f.label :end_time %>
<%= f.datetime_select :end_time %>
</div>
<div>
  <%= f.label :capacity %>
  <%= f.number_field :capacity%>
</div>
<div>
  <%= f.submit %>
</div>
<% end %>
